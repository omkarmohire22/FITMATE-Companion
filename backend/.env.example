# Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# PostgreSQL database connection string
DATABASE_URL=postgresql://fitmate:fitmate123@localhost/fitmate

# ===========================================
# SECURITY (REQUIRED)
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secure-string-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# AI & CHATBOT (OPTIONAL)
# ===========================================
# OpenAI API key for AI Chatbot and Nutrition Analysis
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# CACHING (OPTIONAL)
# ===========================================
# Redis URL for caching and OTP storage
REDIS_URL=redis://localhost:6379

# ===========================================
# OAUTH PROVIDERS (OPTIONAL)
# ===========================================
# Google OAuth - for Google login
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth - for GitHub login
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ===========================================
# PHONE OTP (OPTIONAL)
# ===========================================
# Twilio credentials for phone OTP verification
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server host and port
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# EMAIL (OPTIONAL)
# ===========================================
# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
