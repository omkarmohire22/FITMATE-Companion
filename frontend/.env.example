# Frontend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# API CONFIGURATION (REQUIRED)
# ===========================================
# Backend API URL - change for production
VITE_API_URL=http://localhost:8000

# ===========================================
# APP CONFIGURATION
# ===========================================
# Application name
VITE_APP_NAME=FitMate

# Environment mode
VITE_ENV=development

# ===========================================
# OAUTH CONFIGURATION (OPTIONAL)
# ===========================================
# Google OAuth Client ID (for Google login button)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# GitHub OAuth Client ID (for GitHub login button)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# ===========================================
# FEATURE FLAGS (OPTIONAL)
# ===========================================
# Enable/disable AI features
VITE_ENABLE_AI_FEATURES=true

# Enable/disable social login
VITE_ENABLE_SOCIAL_LOGIN=true

# Enable/disable phone OTP
VITE_ENABLE_PHONE_OTP=false

# ===========================================
# MEDIA & ASSETS (OPTIONAL)
# ===========================================
# CDN URL for static assets (if using)
VITE_CDN_URL=

# Max file upload size in MB
VITE_MAX_FILE_SIZE=5

# ===========================================
# ANALYTICS (OPTIONAL)
# ===========================================
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=

# ===========================================
# DEBUG (DEVELOPMENT ONLY)
# ===========================================
# Enable debug mode
VITE_DEBUG=false
